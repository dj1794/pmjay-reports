    .stat-card .card-body { padding: 1rem; }
    .actions .btn { min-width: 140px; }
    .table thead th { position: sticky; top: 0; z-index: 2; }
    .loading-overlay { position: fixed; inset: 0; background: rgba(255,255,255,0.7); z-index: 2000; }
</style>

<!-- JS helpers -->
<script>
    window.downloadBlob = function(content, filename){
    var a=document.createElement('a');
    a.href=URL.createObjectURL(new Blob([content],{type:'text/csv'}));
    a.download=filename;
    a.click();
    };
</script>